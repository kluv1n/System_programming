mkdir Work
mkdir "Work/Лабораторная работа №1!"
mkdir "Work/Крыжный Клим Сергеевич"
chmod 763 "Work/Лабораторная работа №1!"
chmod 200 "Work/Крыжный Клим Сергеевич"
touch "Work/Text @1"
touch "Work/Text \$2"
touch "Work/Text #3"
echo -e "Птица говорун отличается умом и сообразительностью!\n\nОтличается умом, отличается сообразительностью..." > "Work/Text @1"
cp "Work/Text @1" "Work/Text \$2"
mv "Work/Text \$2" "Work/Лабораторная работа №1!"
cp "Work/Text @1" "Work/Крыжный Клим Сергеевич"
gzip "Work/Text @1"
gzip "Work/Text #3"
tar -cf "Work/MyAchiv.tar" "Work/Text @1.gz" "Work/Text #3.gz"
head -n 1 "Work/Text @1" > "Work/Text #3"
echo -e "$(head -n 1 "Work/Text @1")\nБудь осторожен! Преступник вооружен!" > "Work/Text #3"
tac "Work/Крыжный Клим Сергеевич/Text @1" > "Work/Крыжный Клим Сергеевич/Result_one"
mv "Work/Крыжный Клим Сергеевич/Result_one" "Work/Крыжный Клим Сергеевич/Result_two"
ls "Work/Крыжный Клим Сергеевич/T*" > "Work/Лабораторная работа №1!/Result_3"
cat "Work/Крыжный Клим Сергеевич/T*" >> "Work/Лабораторная работа №1!/Result_3"
uname -a >> "Work/Лабораторная работа №1!/Result_3"
date >> "Work/Лабораторная работа №1!/Result_3"
